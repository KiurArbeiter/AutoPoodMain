        </div>


        <div class="form-group-row">
            <label asp-for="Seats" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Seats)
        </div>

        <div class="form-group-row">
            <label asp-for="Inspection" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Inspection)
