            @Html.DisplayFor(model => model.Register)
        </div>

        <div class="form-group-row">
            <label asp-for="SerialNumber" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.SerialNumber)
        </div>

