@model Autopood.Models.Car.CarDetailsViewModel
<h1>Details</h1>
<div>

    <h4>Car</h4>
    <hr />
    <div style="display: flex; align-content: space-between">
        <div style="padding-right: 100px; justify-content: space-between; width: 120%">
            <dl class="row">
                <div class="form-group-row">
                    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Id)
                </div>

                <div class="form-group-row">
                    <label asp-for="Mark" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Mark)
                </div>

                <div class="form-group-row">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Description)
                </div>

                <div class="form-group-row">
                    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Price)
                </div>

                <div class="form-group-row">
                    <label asp-for="Model" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Model)
                </div>

                <div class="form-group-row">
                    <label asp-for="Year" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Year)
                </div>

                <div class="form-group-row">
                    <label asp-for="Register" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Register)
                </div>

                <div class="form-group-row">
                    <label asp-for="SerialNumber" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.SerialNumber)
                </div>

                <div class="form-group-row">
                    <label asp-for="Engine" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Engine)
                </div>

                <div class="form-group-row">
                    <label asp-for="Mileage" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Tires)
                </div>

                <div class="form-group-row">
                    <label asp-for="Seats" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Seats)
                </div>

                <div class="form-group-row">
                    <label asp-for="Inspection" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.Inspection)
                </div>

                <div class="form-group-row">
                    <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.ModifiedAt)
                </div>

                <div class="form-group-row">
                    <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
                    @Html.DisplayFor(model => model.CreatedAt)
                </div>
                @foreach (var images in Model.FileToApiViewModels)
                {
                    <partial name="_Images" model="images" />
                }
            </dl>
            <a asp-action="Index" asp-controller="Cars" class="btn_edit">Back</a>
        </div>
        <div>
            <div style="display: flex; flex-direction: column; width: 500px; height:500px;">
                @foreach (var images in Model.Image)
                {
                    <partial name="_Images" model="images" />
                    
                }
            </div>
        </div>
    </div>
    
</div>
